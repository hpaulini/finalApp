<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rectangle_background"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <TextView
        android:id="@+id/tvRequestedFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/ivRequestedProfilePic"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="First Name" />

    <TextView
        android:id="@+id/tvRequestedLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvRequestedFirstName"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/tvRequestedFirstName"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="Last Name" />

    <TextView
        android:id="@+id/tvRequestedUserType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRequestedHospital"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/ivRequestedProfilePic"
        tools:text="User Type" />

    <TextView
        android:id="@+id/tvRequestedHospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRequestedCancerType"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/ivRequestedProfilePic"
        tools:text="Hospital" />

    <TextView
        android:id="@+id/tvRequestedCancerType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRequestedFirstName"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/ivRequestedProfilePic"
        tools:text="Cancer Type" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivRequestedProfilePic"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:useLevel="false"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnRequestedSave"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivRequestedProfilePic"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/btnRequestedDetails"
        android:text="Save Profile"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btnRequestedDetails"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivRequestedProfilePic"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:text="Details &amp; Contact Info"
        android:textSize="10sp" />

</RelativeLayout>