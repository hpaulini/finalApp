<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ViewpagerconnectionsFragment">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/connectionTabsView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/connectionTabBar"
        android:layout_marginTop="0dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/connectionTabBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/connectiontab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Connections" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/connectiontab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saved Profiles" />

    </com.google.android.material.tabs.TabLayout>

</RelativeLayout>